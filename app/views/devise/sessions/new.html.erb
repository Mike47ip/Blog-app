<div class="login-container">
  <h2>Log in</h2>
  <p class="alert"><%= alert %></p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
    <div class="field email-field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="field password-field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field-remember-me-field">
        <%= f.check_box :remember_me, class: 'remember-me-checkbox' %>
        <%= f.label :remember_me, class: 'remember-me-label' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'login-button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
